{% extends 'base.html.twig' %}

{% block title %}Profil Düzenle
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
			<div class="p-6">
				<h1 class="text-2xl font-bold text-gray-800 mb-6">Profil Bilgilerini Düzenle</h1>

				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="mb-4 p-4 rounded-md {{ label == 'success' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' }}">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}

				{{ form_start(form) }}
				<div class="mb-4">
					{{ form_label(form.name, 'Ad', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.name) }}
					{{ form_errors(form.name) }}
				</div>

				<div class="mb-4">
					{{ form_label(form.surname, 'Soyad', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.surname) }}
					{{ form_errors(form.surname) }}
				</div>

				<div class="mb-4">
					{{ form_label(form.profileImage, 'Profil Fotoğrafı', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.profileImage) }}
					{{ form_errors(form.profileImage) }}
					<p class="mt-1 text-sm text-gray-500">JPG veya PNG formatında, en fazla 1MB boyutunda bir dosya yükleyebilirsiniz.</p>

					{% if app.user.profileImage %}
						<div class="mt-2 flex items-center">
							<div class="w-16 h-16 mr-3">
								<img src="{{ asset('uploads/profile_images/' ~ app.user.profileImage) }}" alt="Mevcut Profil Fotoğrafı" class="w-full h-full rounded-full object-cover">
							</div>
							<p class="text-sm text-gray-500">Mevcut profil fotoğrafı</p>
						</div>
					{% endif %}
				</div>

				<div class="mt-6 flex items-center justify-between">
					<a href="{{ path('app_profile') }}" class="inline-flex items-center px-4 py-2 bg-gray-200 border border-transparent rounded-md font-semibold text-xs text-gray-700 uppercase tracking-widest hover:bg-gray-300 active:bg-gray-400 focus:outline-none focus:border-gray-400 focus:ring focus:ring-gray-200 disabled:opacity-25 transition">
						Geri Dön
					</a>
					{{ form_widget(form.save) }}
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
