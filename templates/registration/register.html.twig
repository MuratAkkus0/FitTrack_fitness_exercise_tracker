{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<main class="flex-1 py-12 px-4">
		<div class="max-w-4xl mx-auto">
			<div class="bg-white rounded-xl shadow-xl overflow-hidden">
				<div
					class="md:flex">
					<!-- Motivational Side Image -->
					<div class="md:w-1/2 bg-gradient-to-br from-indigo-900 to-purple-800 p-12 flex items-center justify-center">
						<div class="text-center text-white">
							<i class="fas fa-dumbbell text-6xl text-orange-400 mb-6"></i>
							<h2 class="text-3xl font-bold mb-4">Start Your Fitness Journey</h2>
							<p class="text-indigo-200">Track every rep, crush every goal, and transform your body with our community!</p>
							<div class="mt-8 space-y-4 text-left">
								<div class="flex items-center space-x-3">
									<div class="bg-orange-400 rounded-full w-8 h-8 flex items-center justify-center">
										<i class="fas fa-check text-white text-sm"></i>
									</div>
									<span>Personalized workout plans</span>
								</div>
								<div class="flex items-center space-x-3">
									<div class="bg-orange-400 rounded-full w-8 h-8 flex items-center justify-center">
										<i class="fas fa-check text-white text-sm"></i>
									</div>
									<span>Progress analytics</span>
								</div>
								<div class="flex items-center space-x-3">
									<div class="bg-orange-400 rounded-full w-8 h-8 flex items-center justify-center">
										<i class="fas fa-check text-white text-sm"></i>
									</div>
									<span>Nutrition tracking</span>
								</div>
							</div>
						</div>
					</div>

					<!-- Registration Form -->
					<div class="md:w-1/2 p-8 md:p-12">
						<h1 class="text-3xl font-bold text-gray-800 mb-2">Create Account</h1>
						<p class="text-gray-600 mb-8">Join 500,000+ fitness enthusiasts</p>
						{{ form_errors(registrationForm) }}


						{{ form_start(registrationForm,{
							'attr':{
								'class':'space-y-6',
							}
						}) }}
						<!-- Personal Info Section -->
						<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
							<div>
								<label class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
								<div class="relative">
									<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
										<i class="fas fa-user text-gray-400"></i>
									</div>
									{{ form_row(registrationForm.name) }}

								</div>
							</div>
							<div>
								<label class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
								<div class="relative">
									<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
										<i class="fas fa-user text-gray-400"></i>
									</div>
									{{ form_row(registrationForm.surname) }}

								</div>
							</div>
						</div>

						<!-- Fitness Info Section -->


						<!-- Account Credentials -->
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-1">
								Email</label>
							<div class="relative">
								<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
									<i class="fas fa-envelope text-gray-400"></i>
								</div>
								{{ form_row(registrationForm.email) }}

							</div>
						</div>

						<div>
							<label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
							<div class="relative">
								<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
									<i class="fas fa-lock text-gray-400"></i>
								</div>
								{{ form_row(registrationForm.plainPassword.first) }}
								<div class="absolute inset-y-0 right-0 pr-3 flex items-center">
									<i class="fas fa-eye-slash text-gray-400 cursor-pointer hover:text-gray-600 toggle-password"></i>
								</div>
							</div>
							<p class="mt-1 text-xs text-gray-500">Minimum 8 characters with numbers</p>
						</div>

						<div>
							<label class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
							<div class="relative">
								<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
									<i class="fas fa-lock text-gray-400"></i>
								</div>
								{{ form_row(registrationForm.plainPassword.second) }}

							</div>
						</div>

						<!-- Terms & Submit -->
						<div class="flex items-start">
							<div class="flex items-center h-5">
								{{form_row(registrationForm.agreeTerms)}}
							</div>
							<div class="ml-3 text-sm">
								<p class="text-gray-600">
									I agree to the
									<a href="#" class="text-orange-600 hover:text-orange-500">Terms of Service</a>
									and
									<a href="#" class="text-orange-600 hover:text-orange-500">Privacy Policy</a>
								</p>
							</div>
						</div>

						<button type="submit" class="group relative w-full flex justify-center py-3 px-4 border border-transparent font-medium rounded-md text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition">
							<span class="absolute left-0 inset-y-0 flex items-center pl-3">
								<i class="fas fa-bolt text-orange-200 group-hover:text-orange-100"></i>
							</span>
							Get Started - It's Free!
						</button>
						{{ form_end(registrationForm) }}


						<div class="mt-6">
							<div class="relative">
								<div class="absolute inset-0 flex items-center">
									<div class="w-full border-t border-gray-300"></div>
								</div>
								<div class="relative flex justify-center text-sm">
									<span class="px-2 bg-white text-gray-500">
										Or continue with
									</span>
								</div>
							</div>

							<div class="mt-6 grid grid-cols-2 gap-3">
								<a href="#" class="w-full flex items-center justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
									<i class="fab fa-google text-red-500 mr-2"></i>
									Google
								</a>
								<a href="#" class="w-full flex items-center justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
									<i class="fab fa-apple text-gray-800 mr-2"></i>
									Apple
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>

