{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<!-- Navbar -->
	{% set navItems = [
		{'name': 'Home', 'path': path('app_home'), 'active': false},
		{'name': 'Workouts', 'path': '#', 'active': false},
		{'name': 'Progress', 'path': '#', 'active': false},
		{'name': 'Nutrition', 'path': '#', 'active': false},
		{'name': 'Profile', 'path': '#', 'active': false}
	] %}
	{% include 'components/navbar.html.twig' with {'navItems': navItems} %}

	<main class="flex-1 py-8 px-4 sm:py-10 md:py-12">
		<div class="max-w-4xl mx-auto">
			<div class="bg-white rounded-xl shadow-xl overflow-hidden">
				<div
					class="flex flex-col md:flex-row">
					<!-- Motivational Side Image -->
					<div class="w-full md:w-1/2 bg-gradient-to-br from-indigo-900 to-purple-800 p-6 sm:p-8 md:p-12 flex items-center justify-center">
						<div class="text-center text-white">
							<i class="fas fa-dumbbell text-4xl sm:text-5xl md:text-6xl text-orange-400 mb-4 sm:mb-6"></i>
							<h2 class="text-2xl sm:text-3xl font-bold mb-3 sm:mb-4">Start Your Fitness Journey</h2>
							<p class="text-indigo-200 text-sm sm:text-base">Track every rep, crush every goal, and transform your body with our community!</p>
							<div class="mt-6 sm:mt-8 space-y-3 sm:space-y-4 text-left">
								<div class="flex items-center space-x-3">
									<div class="bg-orange-400 rounded-full w-6 h-6 sm:w-8 sm:h-8 flex items-center justify-center">
										<i class="fas fa-check text-white text-xs sm:text-sm"></i>
									</div>
									<span class="text-sm sm:text-base">Personalized workout plans</span>
								</div>
								<div class="flex items-center space-x-3">
									<div class="bg-orange-400 rounded-full w-6 h-6 sm:w-8 sm:h-8 flex items-center justify-center">
										<i class="fas fa-check text-white text-xs sm:text-sm"></i>
									</div>
									<span class="text-sm sm:text-base">Progress analytics</span>
								</div>
								<div class="flex items-center space-x-3">
									<div class="bg-orange-400 rounded-full w-6 h-6 sm:w-8 sm:h-8 flex items-center justify-center">
										<i class="fas fa-check text-white text-xs sm:text-sm"></i>
									</div>
									<span class="text-sm sm:text-base">Nutrition tracking</span>
								</div>
							</div>
						</div>
					</div>

					<!-- Registration Form -->
					<div class="w-full md:w-1/2 p-6 sm:p-8 md:p-12">
						<h1 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-2">Create Account</h1>
						<p class="text-gray-600 mb-6 sm:mb-8 text-sm sm:text-base">Join 500,000+ fitness enthusiasts</p>
						{{ form_errors(registrationForm) }}


						{{ form_start(registrationForm,{
							'attr':{
								'class':'space-y-4 sm:space-y-6',
							}
						}) }}
						<!-- Personal Info Section -->
						<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
							<div>
								<label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">First Name</label>
								<div class="relative">
									<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
										<i class="fas fa-user text-gray-400"></i>
									</div>
									{{ form_row(registrationForm.name) }}

								</div>
							</div>
							<div>
								<label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Last Name</label>
								<div class="relative">
									<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
										<i class="fas fa-user text-gray-400"></i>
									</div>
									{{ form_row(registrationForm.surname) }}

								</div>
							</div>
						</div>

						<!-- Fitness Info Section -->


						<!-- Account Credentials -->
						<div>
							<label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">
								Email</label>
							<div class="relative">
								<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
									<i class="fas fa-envelope text-gray-400"></i>
								</div>
								{{ form_row(registrationForm.email) }}

							</div>
						</div>

						<div>
							<label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Password</label>
							<div class="relative">
								<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
									<i class="fas fa-lock text-gray-400"></i>
								</div>
								{{ form_row(registrationForm.plainPassword.first) }}
								<div class="absolute inset-y-0 right-0 pr-3 flex items-center">
									<i class="fas fa-eye-slash text-gray-400 cursor-pointer hover:text-gray-600 toggle-password"></i>
								</div>
							</div>
							<p class="mt-1 text-xs text-gray-500">Minimum 8 characters with numbers</p>
						</div>

						<div>
							<label class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
							<div class="relative">
								<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
									<i class="fas fa-lock text-gray-400"></i>
								</div>
								{{ form_row(registrationForm.plainPassword.second) }}

							</div>
						</div>

						<!-- Terms & Submit -->
						<div class="flex items-start">
							<div class="flex items-center h-5">
								{{form_row(registrationForm.agreeTerms)}}
							</div>
							<div class="ml-3 text-xs sm:text-sm">
								<p class="text-gray-600">
									I agree to the
									<a href="#" class="text-orange-600 hover:text-orange-500">Terms of Service</a>
									and
									<a href="#" class="text-orange-600 hover:text-orange-500">Privacy Policy</a>
								</p>
							</div>
						</div>

						<button type="submit" class="group relative w-full flex justify-center py-2 sm:py-3 px-4 border border-transparent font-medium rounded-md text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition text-sm sm:text-base">
							<span class="absolute left-0 inset-y-0 flex items-center pl-3">
								<i class="fas fa-bolt text-orange-200 group-hover:text-orange-100"></i>
							</span>
							Get Started - It's Free!
						</button>
						{{ form_end(registrationForm) }}


						<div class="mt-4 sm:mt-6">
							<div class="relative">
								<div class="absolute inset-0 flex items-center">
									<div class="w-full border-t border-gray-300"></div>
								</div>
								<div class="relative flex justify-center text-xs sm:text-sm">
									<span class="px-2 bg-white text-gray-500">
										Or continue with
									</span>
								</div>
							</div>

							<div class="mt-4 sm:mt-6 grid grid-cols-2 gap-3">
								<a href="#" class="w-full flex items-center justify-center py-2 px-3 sm:px-4 border border-gray-300 rounded-md shadow-sm text-xs sm:text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
									<i class="fab fa-google text-red-500 mr-2"></i>
									Google
								</a>
								<a href="#" class="w-full flex items-center justify-center py-2 px-3 sm:px-4 border border-gray-300 rounded-md shadow-sm text-xs sm:text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
									<i class="fab fa-apple text-gray-800 mr-2"></i>
									Apple
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>

	<!-- Footer -->
	{% include('footer.html.twig') %}
{% endblock %}
