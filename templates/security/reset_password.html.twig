{% extends 'base.html.twig' %}

{% block title %}Reset Password - FitTrack
{% endblock %}

{% block body %}
	<!-- Navbar -->
	{% set navItems = [
		{'name': 'Home', 'path': path('app_home'), 'active': false},
		{'name': 'Workouts', 'path': '#', 'active': false},
		{'name': 'Progress', 'path': '#', 'active': false},
		{'name': 'Nutrition', 'path': '#', 'active': false},
		{'name': 'Profile', 'path': '#', 'active': false}
	] %}
	{% include 'components/navbar.html.twig' with {'navItems': navItems} %}

	<main class="flex-1 flex items-center justify-center py-8 sm:py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-md w-full space-y-6 sm:space-y-8">
			<div class="text-center">
				<i class="fas fa-lock text-4xl sm:text-5xl text-orange-400 mb-3 sm:mb-4"></i>
				<h2 class="mt-4 sm:mt-6 text-2xl sm:text-3xl font-extrabold text-gray-900">
					Set New Password
				</h2>
				<p class="mt-2 text-xs sm:text-sm text-gray-600">
					Set a new password for your account
				</p>
			</div>

			<!-- Flash Messages -->
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="rounded-md p-4 {{ label == 'success' ? 'bg-green-50 text-green-800 border border-green-200' : 'bg-red-50 text-red-800 border border-red-200' }}">
						<div class="flex">
							<div class="flex-shrink-0">
								<i class="fas {{ label == 'success' ? 'fa-check-circle text-green-400' : 'fa-exclamation-circle text-red-400' }}"></i>
							</div>
							<div class="ml-3">
								<p class="text-sm font-medium">{{ message }}</p>
							</div>
						</div>
					</div>
				{% endfor %}
			{% endfor %}

			<!-- Reset Password Form -->
			{{ form_start(form, {'attr': {'class': 'mt-6 sm:mt-8 space-y-5 sm:space-y-6 bg-white p-6 sm:p-8 rounded-xl shadow-md'}}) }}
			<div>
				<label for="{{ form.plainPassword.first.vars.id }}" class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">New Password</label>
				<div class="relative">
					<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
						<i class="fas fa-lock text-gray-400 text-sm sm:text-base"></i>
					</div>
					{{ form_widget(form.plainPassword.first) }}
				</div>
				{{ form_errors(form.plainPassword.first) }}
			</div>

			<div>
				<label for="{{ form.plainPassword.second.vars.id }}" class="block text-xs sm:text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
				<div class="relative">
					<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
						<i class="fas fa-lock text-gray-400 text-sm sm:text-base"></i>
					</div>
					{{ form_widget(form.plainPassword.second) }}
				</div>
				{{ form_errors(form.plainPassword.second) }}
			</div>

			{{ form_errors(form.plainPassword) }}

			<div>
				{{ form_widget(form.submit) }}
			</div>
			{{ form_end(form) }}

			<div class="text-center text-xs sm:text-sm">
				<p class="text-gray-600">
					<a href="{{ path('app_login') }}" class="font-medium text-orange-600 hover:text-orange-500">
						Back to login page
					</a>
				</p>
			</div>
		</div>
	</main>

	<!-- Footer -->
	{% include('footer.html.twig') %}
{% endblock %}
