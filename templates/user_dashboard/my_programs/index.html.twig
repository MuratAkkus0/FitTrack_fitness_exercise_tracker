{% extends 'user_dashboard/dashboard_template.html.twig' %}

{% block dashboard_content %}
	<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
		<div class="flex justify-between items-center mb-6">
			<h3 class="text-xl font-semibold text-gray-900">My Training Programs</h3>
			<div class="flex space-x-3">
				<a href="{{ path('app_programs_browse_shared') }}" class="inline-flex items-center px-4 py-2 bg-indigo-100 hover:bg-indigo-200 text-indigo-700 hover:text-indigo-900 rounded-lg font-medium transition-all duration-200 shadow-sm hover:shadow-md">
					<i class="fas fa-share-alt mr-2"></i>
					Shared Programs
				</a>
				<a href="{{ path('app_programs_create') }}" class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-all duration-200 shadow-sm hover:shadow-md">
					<i class="fas fa-plus mr-2"></i>
					New Program
				</a>
			</div>
		</div>

		{% if error is defined %}
			<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
				<p>{{ error }}</p>
			</div>
		{% endif %}

		<!-- Program Cards -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{% if programs is defined and programs|length > 0 %}
				{% for program in programs %}
					{% include 'components/program_card_simple.html.twig' with {'program': program} %}
				{% endfor %}
			{% else %}
				<div class="col-span-3 text-center py-12 text-gray-500">
					<i class="fas fa-dumbbell text-6xl text-gray-300 mb-4"></i>
					<p class="text-lg font-medium mb-2">You don't have any training programs yet</p>
					<p class="mb-4">Click the "New Program" button to create your first program.</p>
					<a href="{{ path('app_programs_create') }}" class="inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-all duration-200 shadow-sm hover:shadow-md">
						<i class="fas fa-plus mr-2"></i>
						Create My First Program
					</a>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
