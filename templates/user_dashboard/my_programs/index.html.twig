{% extends 'user_dashboard/dashboard_template.html.twig' %}

{% block dashboard_content %}

	<div id="myPrograms" class="bg-white rounded-xl shadow-md p-6">
		<div class="flex justify-between items-center mb-6">
			<h3 class="text-xl font-bold text-indigo-900">My Workout Programs</h3>
			<button class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg font-medium transition">
				<i class="fas fa-plus mr-2"></i>
				New Program
			</button>
		</div>

		<!-- Program Cards -->
		<div
			class="grid grid-cols-1 md:grid-cols-2 gap-6">
			<!-- Program 1 -->
			<div class="border border-gray-200 rounded-lg p-5 hover:shadow-md transition">
				<div class="flex justify-between items-start mb-3">
					<h4 class="font-bold text-lg">Upper Body Split</h4>
					<span class="bg-indigo-100 text-indigo-800 px-2 py-1 rounded-full text-xs">Active</span>
				</div>
				<p class="text-gray-600 mb-4">Focus on chest, shoulders and arms. 3 days per week.</p>
				<div class="flex space-x-2">
					<button class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full text-sm">
						8 Exercises
					</button>
					<button class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm">
						45 min
					</button>
				</div>
				<div class="mt-4 flex space-x-2">
					<button class="text-indigo-600 hover:text-indigo-800">
						<i class="fas fa-edit mr-1"></i>
						Edit
					</button>
					<button class="text-orange-600 hover:text-orange-800">
						<i class="fas fa-play mr-1"></i>
						Start
					</button>
					<button class="text-red-600 hover:text-red-800">
						<i class="fas fa-trash mr-1"></i>
						Delete
					</button>
				</div>
			</div>

			<!-- Program 2 -->
			<div class="border border-gray-200 rounded-lg p-5 hover:shadow-md transition">
				<div class="flex justify-between items-start mb-3">
					<h4 class="font-bold text-lg">Full Body Workout</h4>
					<span class="bg-gray-100 text-gray-800 px-2 py-1 rounded-full text-xs">Inactive</span>
				</div>
				<p class="text-gray-600 mb-4">Complete full body routine. 2 days per week.</p>
				<div class="flex space-x-2">
					<button class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full text-sm">
						12 Exercises
					</button>
					<button class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm">
						60 min
					</button>
				</div>
				<div class="mt-4 flex space-x-2">
					<button class="text-indigo-600 hover:text-indigo-800">
						<i class="fas fa-edit mr-1"></i>
						Edit
					</button>
					<button class="text-orange-600 hover:text-orange-800">
						<i class="fas fa-play mr-1"></i>
						Start
					</button>
					<button class="text-red-600 hover:text-red-800">
						<i class="fas fa-trash mr-1"></i>
						Delete
					</button>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
