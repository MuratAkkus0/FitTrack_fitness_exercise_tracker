{% extends 'user_dashboard/dashboard_template.html.twig' %}

{% block dashboard_content %}
	<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
		<div class="flex items-center mb-6">
			<a href="{{ path('app_exercises_index') }}" class="text-indigo-600 hover:text-indigo-800 mr-4">
				<i class="fas fa-arrow-left"></i>
			</a>
			<h2 class="text-xl font-semibold text-gray-900">Add New Exercise</h2>
		</div>

		<form method="POST" class="space-y-6">
			<div>
				<label for="name" class="block text-sm font-medium text-gray-700 mb-1">Exercise Name *</label>
				<input type="text" id="name" name="name" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="e.g., Bench Press">
			</div>

			<div>
				<label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description *</label>
				<textarea id="description" name="description" rows="4" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Describe how to perform this exercise..."></textarea>
			</div>

			<div>
				<label for="muscle_group" class="block text-sm font-medium text-gray-700 mb-1">Muscle Group *</label>
				<select id="muscle_group" name="muscle_group" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
					<option value="">Select muscle group</option>
					{% for muscleGroup in muscleGroups %}
						<option value="{{ muscleGroup.value }}">{{ muscleGroup.getLabel() }}</option>
					{% endfor %}
				</select>
			</div>

			<div>
				<label for="image_url" class="block text-sm font-medium text-gray-700 mb-1">Image URL (Optional)</label>
				<input type="url" id="image_url" name="image_url" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="https://example.com/exercise-image.jpg">
				<p class="text-sm text-gray-500 mt-1">Add a direct link to an exercise image</p>
			</div>

			<div>
				<label for="video_url" class="block text-sm font-medium text-gray-700 mb-1">Video URL (Optional)</label>
				<input type="url" id="video_url" name="video_url" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="https://youtube.com/watch?v=...">
				<p class="text-sm text-gray-500 mt-1">Add a YouTube or other video tutorial link</p>
			</div>

			<div class="flex gap-4 pt-4">
				<a href="{{ path('app_exercises_index') }}" class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 text-center py-2 px-4 rounded-lg font-medium transition-colors duration-200">
					Cancel
				</a>
				<button type="submit" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg font-medium transition-colors duration-200">
					Add Exercise
				</button>
			</div>
		</form>
	</div>
{% endblock %}
