{% extends 'user_dashboard/dashboard_template.html.twig' %}

{% block title %}Workout History - FitTrack
{% endblock %}

{% block dashboard_content %}
	<div class="max-w-6xl mx-auto">
		<!-- Header -->
		<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
			<div>
				<h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">Workout History</h1>
				<p class="text-gray-600">Track your fitness journey and progress</p>
			</div>
			<div class="flex space-x-3 mt-4 sm:mt-0">
				<a href="{{ path('app_dashboard_today') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium transition">
					<i class="fas fa-plus mr-2"></i>New Workout
				</a>
			</div>
		</div>

		<!-- Workout List -->
		<div class="space-y-4">
			{% for workout in workouts %}
				<div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition">
					<div class="p-6">
						<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4">
							<div class="flex items-center space-x-4">
								<div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center">
									<i class="fas fa-dumbbell text-indigo-600 text-xl"></i>
								</div>
								<div>
									<h3 class="text-lg font-semibold text-gray-800">
										{{ workout.programName ?? 'Custom Workout' }}
									</h3>
									<p class="text-sm text-gray-500">{{ workout.date }}</p>
								</div>
							</div>
							<div class="flex items-center space-x-2 mt-3 sm:mt-0">
								{% if workout.isCompleted %}
									<span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">
										<i class="fas fa-check mr-1"></i>Completed
									</span>
								{% else %}
									<span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-medium">
										<i class="fas fa-clock mr-1"></i>In Progress
									</span>
								{% endif %}
							</div>
						</div>

						<div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-4">
							<div class="bg-gray-50 rounded-lg p-3">
								<div class="flex items-center">
									<i class="fas fa-clock text-blue-600 mr-2"></i>
									<div>
										<p class="text-xs text-gray-500">Duration</p>
										<p class="text-sm font-semibold text-gray-800">{{ workout.duration }}min</p>
									</div>
								</div>
							</div>
							<div class="bg-gray-50 rounded-lg p-3">
								<div class="flex items-center">
									<i class="fas fa-list text-green-600 mr-2"></i>
									<div>
										<p class="text-xs text-gray-500">Exercises</p>
										<p class="text-sm font-semibold text-gray-800">{{ workout.exerciseCount }}</p>
									</div>
								</div>
							</div>
							<div class="bg-gray-50 rounded-lg p-3">
								<div class="flex items-center">
									<i class="fas fa-fire text-orange-600 mr-2"></i>
									<div>
										<p class="text-xs text-gray-500">Calories</p>
										<p class="text-sm font-semibold text-gray-800">
											{% if workout.estimatedCalories %}
												{{ workout.estimatedCalories }}kcal
											{% else %}
												~{{ (workout.duration * 300)|round }}kcal
											{% endif %}
										</p>
									</div>
								</div>
							</div>
							<div class="bg-gray-50 rounded-lg p-3">
								<div class="flex items-center">
									<i class="fas fa-chart-line text-purple-600 mr-2"></i>
									<div>
										<p class="text-xs text-gray-500">Intensity</p>
										<p class="text-sm font-semibold text-gray-800">High</p>
									</div>
								</div>
							</div>
						</div>

						{% if workout.notes %}
							<div class="bg-blue-50 rounded-lg p-3 mb-4">
								<p class="text-sm text-blue-800">
									<i class="fas fa-sticky-note mr-2"></i>
									{{ workout.notes }}
								</p>
							</div>
						{% endif %}

						<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center space-y-3 sm:space-y-0">
							<div class="flex space-x-3">
								<a href="{{ path('app_workout_details', {id: workout.id}) }}" class="text-indigo-600 hover:text-indigo-800 font-medium">
									<i class="fas fa-eye mr-1"></i>View Details
								</a>
							</div>
							<div class="flex items-center space-x-2">
								<button class="text-gray-500 hover:text-blue-500 transition">
									<i class="fas fa-copy mr-1"></i>Repeat
								</button>
								<button class="text-gray-500 hover:text-red-500 transition">
									<i class="fas fa-trash mr-1"></i>Delete
								</button>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<div class="text-center py-12">
					<div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<i class="fas fa-dumbbell text-3xl text-gray-400"></i>
					</div>
					<h3 class="text-xl font-semibold text-gray-600 mb-2">No workouts yet</h3>
					<p class="text-gray-500 mb-6">Start your fitness journey by creating your first workout!</p>
					<a href="{{ path('app_dashboard_today') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-medium transition">
						Start Your First Workout
					</a>
				</div>
			{% endfor %}
		</div>

		<!-- Pagination -->
		{% if workouts|length >= 20 %}
			<div class="text-center mt-8">
				<button class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-medium transition">
					Load More Workouts
				</button>
			</div>
		{% endif %}
	</div>


{% endblock %}
