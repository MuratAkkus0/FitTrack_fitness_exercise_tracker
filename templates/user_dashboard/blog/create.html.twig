{% extends 'user_dashboard/dashboard_template.html.twig' %}

{% block title %}Create Blog Post - FitTrack
{% endblock %}

{% block dashboard_content %}
	<div
		data-controller="blog" data-blog-create-url-value="{{ path('app_blog_create') }}" data-blog-max-characters-value="5000" class="max-w-4xl mx-auto">
		<!-- Header -->
		<div class="mb-6">
			<div class="flex items-center space-x-4 mb-4">
				<a href="{{ path('app_blog_index') }}" class="text-gray-500 hover:text-gray-700">
					<i class="fas fa-arrow-left mr-2"></i>Back to Blog
				</a>
			</div>
			<h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">Create New Post</h1>
			<p class="text-gray-600">Share your fitness journey with the community</p>
		</div>

		<!-- Create Post Form -->
		<div class="bg-white rounded-xl shadow-md p-6">
			<form
				data-blog-target="form" data-action="submit->blog#submitForm" class="space-y-6">
				<!-- Title -->
				<div>
					<label for="title" class="block text-sm font-medium text-gray-700 mb-2">Post Title</label>
					<input type="text" data-blog-target="titleInput" name="title" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Enter your post title...">
				</div>

				<!-- Content -->
				<div>
					<label for="content" class="block text-sm font-medium text-gray-700 mb-2">Content</label>
					<textarea data-blog-target="contentTextarea" data-action="input->blog#onContentInput" name="content" rows="12" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Share your thoughts, experiences, tips, or workout details..."></textarea>
					<div class="flex justify-between items-center mt-2">
						<p class="text-sm text-gray-500">You can use line breaks to format your content.</p>
						<div class="text-sm text-gray-500">
							<span data-blog-target="characterCount">0</span>/5000 characters
																																							(<span data-blog-target="wordCount">0</span>
							words)
						</div>
					</div>
				</div>

				<!-- Privacy Settings -->
				<div class="bg-gray-50 rounded-lg p-4">
					<h3 class="font-semibold text-gray-800 mb-3">Privacy Settings</h3>
					<div class="space-y-3">
						<label class="flex items-center">
							<input type="radio" name="privacy" value="private" checked class="w-4 h-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
							<span class="ml-3">
								<span class="font-medium text-gray-700">Private</span>
								<span class="text-sm text-gray-500 block">Only you can see this post</span>
							</span>
						</label>
						<label class="flex items-center">
							<input type="radio" name="privacy" value="public" class="w-4 h-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
							<span class="ml-3">
								<span class="font-medium text-gray-700">Public</span>
								<span class="text-sm text-gray-500 block">Everyone in the community can see this post</span>
							</span>
						</label>
					</div>
				</div>

				<!-- Action Buttons -->
				<div class="flex flex-col sm:flex-row justify-between items-center space-y-3 sm:space-y-0 sm:space-x-4">
					<div class="flex items-center space-x-4">
						<button type="button" data-blog-target="previewBtn" data-action="click->blog#openPreview" class="text-indigo-600 hover:text-indigo-800 font-medium">
							<i class="fas fa-eye mr-2"></i>Preview
						</button>
						<button type="button" data-action="click->blog#saveDraft" class="text-gray-600 hover:text-gray-800 font-medium">
							<i class="fas fa-save mr-2"></i>Save Draft
						</button>
					</div>
					<div class="flex space-x-3">
						<a href="{{ path('app_blog_index') }}" class="bg-gray-100 hover:bg-gray-200 px-6 py-3 rounded-lg font-medium text-gray-700 transition">
							Cancel
						</a>
						<button type="submit" data-blog-target="submitBtn" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-medium transition">
							<i class="fas fa-paper-plane mr-2"></i>Publish Post
						</button>
					</div>
				</div>
			</form>
		</div>

		<!-- Preview Modal -->
		<div data-blog-target="previewModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
			<div class="flex items-center justify-center min-h-screen p-4">
				<div class="modal-content bg-white rounded-xl shadow-xl max-w-4xl w-full max-h-screen overflow-y-auto">
					<div class="p-6 border-b border-gray-200">
						<div class="flex justify-between items-center">
							<h3 class="text-xl font-bold text-gray-800">Post Preview</h3>
							<button data-action="click->blog#closePreview" class="text-gray-500 hover:text-gray-700">
								<i class="fas fa-times text-xl"></i>
							</button>
						</div>
					</div>
					<div
						data-blog-target="previewContent" class="p-6"><!-- Preview content will be inserted here -->
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
