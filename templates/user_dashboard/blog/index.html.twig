{% extends 'user_dashboard/dashboard_template.html.twig' %}

{% block title %}Community Blog - FitTrack
{% endblock %}

{% block dashboard_content %}
	<div
		data-controller="blog" data-blog-posts-url-value="{{ path('app_blog_api_posts') }}" class="max-w-4xl mx-auto">
		<!-- Header -->
		<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
			<div>
				<h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">Community Blog</h1>
				<p class="text-gray-600">Share your fitness journey and get inspired by others</p>
			</div>
			<div class="flex space-x-3 mt-4 sm:mt-0">
				<a href="{{ path('app_blog_my_posts') }}" class="bg-gray-100 hover:bg-gray-200 px-4 py-2 rounded-lg font-medium text-gray-700 transition">
					<i class="fas fa-user mr-2"></i>My Posts
				</a>
				<a href="{{ path('app_blog_create') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium transition">
					<i class="fas fa-plus mr-2"></i>Create Post
				</a>
			</div>
		</div>

		<!-- Blog Posts -->
		<div class="space-y-6">
			{% for post in posts %}
				<article
					class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition">
					<!-- Post Header -->
					<div class="p-6 border-b border-gray-100">
						<div class="flex items-center justify-between">
							<div class="flex items-center space-x-3">
								<div class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center">
									{% if post.user.profileImage %}
										<img src="{{ post.user.profileImage }}" alt="Profile" class="w-10 h-10 rounded-full object-cover">
									{% else %}
										<i class="fas fa-user text-indigo-600"></i>
									{% endif %}
								</div>
								<div>
									<h3 class="font-semibold text-gray-800">{{ post.user.name }}
										{{ post.user.surname }}</h3>
									<p class="text-sm text-gray-500">{{ post.createdAt|date('M d, Y \\a\\t H:i') }}</p>
								</div>
							</div>
							{% if post.workoutLog %}
								<div class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm font-medium">
									<i class="fas fa-dumbbell mr-1"></i>Workout Post
								</div>
							{% endif %}
						</div>
					</div>

					<!-- Post Content -->
					<div class="p-6">
						<h2 class="text-xl font-bold text-gray-800 mb-3">
							<a href="{{ path('app_blog_view', {id: post.id}) }}" class="hover:text-indigo-600 transition">
								{{ post.title }}
							</a>
						</h2>

						<div class="text-gray-600 mb-4">
							{{ post.content|length > 200 ? post.content|slice(0, 200) ~ '...' : post.content|nl2br }}
						</div>

						{% if post.workoutLog %}
							<div class="bg-gray-50 rounded-lg p-4 mb-4">
								<div class="flex items-center justify-between">
									<div>
										<h4 class="font-semibold text-gray-800">Workout Details</h4>
										<p class="text-sm text-gray-600">Duration:
											{{ post.workoutLog.duration }}
											hours</p>
										<p class="text-sm text-gray-600">Date:
											{{ post.workoutLog.createdAt|date('M d, Y') }}</p>
									</div>
									<div class="text-right">
										<span class="text-2xl font-bold text-indigo-600">{{ post.workoutLog.duration * 60 }}min</span>
										<p class="text-sm text-gray-500">workout</p>
									</div>
								</div>
							</div>
						{% endif %}

						<div class="flex items-center justify-between">
							<a href="{{ path('app_blog_view', {id: post.id}) }}" class="text-indigo-600 hover:text-indigo-800 font-medium">
								Read more
								<i class="fas fa-arrow-right ml-1"></i>
							</a>
							<div class="flex items-center space-x-4 text-gray-500">
								<button class="hover:text-red-500 transition">
									<i class="far fa-heart mr-1"></i>Like
								</button>
								<button class="hover:text-blue-500 transition">
									<i class="far fa-comment mr-1"></i>Comment
								</button>
								<button class="hover:text-green-500 transition">
									<i class="fas fa-share mr-1"></i>Share
								</button>
							</div>
						</div>
					</div>
				</article>
			{% else %}
				<div class="text-center py-12">
					<div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<i class="fas fa-blog text-3xl text-gray-400"></i>
					</div>
					<h3 class="text-xl font-semibold text-gray-600 mb-2">No posts yet</h3>
					<p class="text-gray-500 mb-6">Be the first to share your fitness journey!</p>
					<a href="{{ path('app_blog_create') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-medium transition">
						Create Your First Post
					</a>
				</div>
			{% endfor %}
		</div>

		<!-- Load More Button -->
		{% if posts|length >= 20 %}
			<div class="text-center mt-8">
				<button data-action="click->blog#loadMorePosts" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-medium transition">
					Load More Posts
				</button>
			</div>
		{% endif %}
	</div>


{% endblock %}
